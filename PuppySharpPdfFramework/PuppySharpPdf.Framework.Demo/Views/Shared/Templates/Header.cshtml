@model PuppySharpPdf.Framework.DemoProject.Models.CorgiTemplateViewModel
@{
    var title = Model.PdfType == "CardiganWelshCorgi" ? "Cardigan Welsh Corgi" : "Pembroke Welsh Corgi";
}
<style>
    @*This header style ensures the footer aligns to the bottom of the page and the background color will be visible*@
    
    #header {
        -webkit-print-color-adjust: exact;
        padding: 0 !important;
        height: 100% !important;
    }

    .pdf-header {
        display: flex;
        flex-direction: row;
        width: 100%;
        padding: 10px;
        margin-bottom: 80px;
        align-content: center;
        background-color: #0a54a3;
    }

    .header-title {
        display: flex;
        flex-direction: row;
        width: 100%;
        align-items: center;
        margin-left: 20px;
    }
</style>

<div class="pdf-header">
    <div>
        <img src="~/Content/images/corgi.png" width="80" height="80" />
    </div>
    <div class="header-title">
        <p class="mt-3" style="font-weight:bold;font-size:18px;color:white">@title</p>
    </div>
</div>
