@model PuppySharpPdf.Framework.DemoProject.Models.DemoTemplateViewModel

@{
    ViewBag.Title = "Generate PDF Using HTML File";
}

<h1>Generate PDF Using HTML/Razor File</h1>

<div class="card">
    <div class="card-header text-center">
        Generate Pdf using Razor File with Dynamic Values
    </div>
    <div class="card-body p-3">
        <form action="/Home/GeneratePdfUsingRazorTemplate" method="post">
            <div class="card">
                <div class="card-body p-3">
                    <div class="form-group mt-1">
                        @Html.LabelFor(x => x.FirstName)
                        @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control w-25" })
                        @Html.ValidationMessageFor(x => x.FirstName, "", new { @class = "text-danger text-bold" })
                    </div>
                    <div class="form-group mt-1">
                        @Html.LabelFor(x => x.LastName)
                        @Html.TextBoxFor(x => x.LastName, new { @class = "form-control w-25" })
                        @Html.ValidationMessageFor(x => x.LastName, "", new { @class = "text-danger text-bold" })
                    </div>
                    <div class="form-group form-check">
                        @Html.CheckBoxFor(x => x.IncludeHeader, new { @class = "form-check-input" })
                        <label class="form-check-label" for="exampleCheck1">Include Header</label>
                        @Html.ValidationMessageFor(x => x.IncludeHeader, "", new { @class = "text-danger text-bold" })

                    </div>
                    <div class="form-group form-check">
                        @Html.CheckBoxFor(x => x.IncludeFooter, new { @class = "form-check-input" })
                        <label class="form-check-label" for="exampleCheck1">Include Footer</label>
                        @Html.ValidationMessageFor(x => x.IncludeFooter, "", new { @class = "text-danger text-bold" })

                    </div>
                </div>
                <div class="card-footer">
                    <button class="btn btn-success" type="submit">Generate PDF</button>
                </div>
            </div>

        </form>




    </div>
</div>

<div class="card mt-3">
    <div class="card-header text-center">
        Generate Pdf using Html File with Static Values
    </div>
    <div class="card-body p-3">
        <form action="/Home/GeneratePdfUsingHtmlTemplate" method="post">
            <div class="card">
                <div class="card-body p-3">

                    <div class="form-group form-check">
                        @Html.CheckBoxFor(x => x.IncludeHeader, new { @class = "form-check-input" })
                        <label class="form-check-label" for="exampleCheck1">Include Header</label>
                        @Html.ValidationMessageFor(x => x.IncludeHeader, "", new { @class = "text-danger text-bold" })

                    </div>
                    <div class="form-group form-check">
                        @Html.CheckBoxFor(x => x.IncludeFooter, new { @class = "form-check-input" })
                        <label class="form-check-label" for="exampleCheck1">Include Footer</label>
                        @Html.ValidationMessageFor(x => x.IncludeFooter, "", new { @class = "text-danger text-bold" })

                    </div>
                </div>
                <div class="card-footer">
                    <button class="btn btn-success" type="submit">Generate PDF</button>
                </div>
            </div>

        </form>
    </div>
</div>
