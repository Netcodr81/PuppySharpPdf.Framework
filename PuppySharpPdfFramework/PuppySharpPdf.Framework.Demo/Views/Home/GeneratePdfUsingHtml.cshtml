@model PuppySharpPdf.Framework.DemoProject.Models.DemoTemplateViewModel

@{
    ViewBag.Title = "Generate PDF Using HTML File";
}

<h1>Generate PDF Using HTML/Razor File</h1>

<div class="card">
    <div class="card-header text-center">
       Generate Pdf using Dynamic Values
    </div>
    <div class="card-body p-3">
        <form action="/Home/GeneratePdfUsingRazorTemplate" method="post">
            <div class="card">
                <div class="card-body p-3">
                    <div class="form-group mt-1">
                        @Html.LabelFor(x => x.FirstName)
                        @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control w-25" })
                        @Html.ValidationMessageFor(x => x.FirstName, "", new { @class = "text-danger text-bold" })
                    </div>
                    <div class="form-group mt-1">
                        @Html.LabelFor(x => x.LastName)
                        @Html.TextBoxFor(x => x.LastName, new { @class = "form-control w-25" })
                        @Html.ValidationMessageFor(x => x.LastName, "", new { @class = "text-danger text-bold" })
                    </div>
                </div>
                <div class="card-footer">
                    <button class="btn btn-success" type="submit">Generate PDF</button>
                </div>
            </div>

        </form>

        @Html.ActionLink("Generate Pdf from Html File", "GeneratePdfUsingHtmlTemplate", "Home", new { }, new { @class = "btn btn-primary mt-3" })

    </div>
</div>